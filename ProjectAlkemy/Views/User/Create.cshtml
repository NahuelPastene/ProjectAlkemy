@using ProjectAlkemy.Model
@model User
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@using (Html.BeginForm("Create", "User", FormMethod.Post))
{
    <div class="row">
        <div class="col-2">
            @Html.LabelFor(x => x.FirstName)
        </div>
        <div class="col-10">
            @Html.TextBoxFor(x => x.FirstName)
        </div>
    </div>

    <div class="row">
        <div class="col-2">
            @Html.LabelFor(x => x.LastName)
        </div>
        <div class="col-10">
            @Html.TextBoxFor(x => x.LastName)
        </div>
    </div>

    <div class="row">
        <div class="col-2">
            @Html.LabelFor(x => x.Dni)
        </div>
        <div class="col-10">
            @Html.TextBoxFor(x => x.Dni)
        </div>
    </div>

    <div class="row">
        <div class="col-2">
            @Html.LabelFor(x => x.IsTeacher)
        </div>
        <div class="col-10">
            @Html.CheckBoxFor(x => x.IsTeacher)
        </div>
    </div>

    <div class="row">
        <div class="col-2">
            @Html.LabelFor(x => x.Active)
        </div>
        <div class="col-10">
            @Html.CheckBoxFor(x => x.Active)
        </div>
    </div>

    <input type="submit" value="Create" class="btn btn-primary" />
}
